---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "{{ cluster_role_binding }}"
subjects:
- kind: ServiceAccount
  name: "{{ service_account }}"
  namespace: "{{ namespace }}"
roleRef:
  kind: ClusterRole
  name: "{{ cluster_role }}"
  apiGroup: rbac.authorization.k8s.io
