---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "{{ role_binding }}"
subjects:
  - kind: ServiceAccount
    name: "{{ service_account }}"
    namespace: "{{ project }}"
roleRef:
  kind: Role
  name: "{{ role }}"
  apiGroup: rbac.authorization.k8s.io
